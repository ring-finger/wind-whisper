page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
}

.container {
  padding: 20rpx;
}

.form-item {
  background: #fff;
  margin-bottom: 12rpx;
  padding: 20rpx;
  border-radius: 8rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.form-label {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 12rpx;
  font-weight: 500;
}

.form-input {
  width: 100%;
  height: 80rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 8rpx;
  padding: 0 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  text-align: left;
  line-height: 76rpx;
}

.picker-input {
  text-align: center;
}

.form-input:focus {
  border-color: #1890ff;
}

.time-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date-time-row {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.date-section {
  flex: 1;
  min-width: 0;
}

.time-section {
  flex: 1;
  min-width: 0;
}

.time-type-toggle {
  padding: 10rpx 20rpx;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 24rpx;
  font-weight: 500;
  cursor: pointer;
}

.time-type-toggle:active {
  background: #e0e0e0;
}

.time-input-wrapper {
  flex: 1;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.refresh-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f0f0f0;
  border-radius: 8rpx;
  font-size: 32rpx;
}

.refresh-btn:active {
  background: #e0e0e0;
}

.weather-icons {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.weather-icon {
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 44rpx;
  border: 2rpx solid transparent;
  box-sizing: border-box;
}

.weather-icon.selected {
  border-color: #1890ff;
  background: #e6f7ff;
}

.mode-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.mode-tag {
  padding: 16rpx 32rpx;
  background: #f5f5f5;
  border-radius: 40rpx;
  font-size: 26rpx;
  color: #666;
  border: 2rpx solid transparent;
}

.mode-tag.selected {
  background: #1890ff;
  color: #fff;
}

.rst-inputs {
  display: flex;
  gap: 20rpx;
}

.rst-item {
  flex: 1;
}

.rst-label {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 10rpx;
  text-align: center;
}

.submit-btn {
  width: 100%;
  height: 90rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 500;
  margin-top: 40rpx;
}

.submit-btn:active {
  background: #096dd9;
}

.log-item {
  background: #fff;
  margin-bottom: 20rpx;
  padding: 30rpx;
  border-radius: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.05);
}

.log-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.log-callsign {
  font-size: 36rpx;
  font-weight: bold;
  color: #1890ff;
}

.log-date {
  font-size: 24rpx;
  color: #999;
}

.log-detail {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  font-size: 26rpx;
  color: #666;
}

.log-detail-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.empty-tip {
  text-align: center;
  padding: 100rpx 0;
  color: #999;
  font-size: 28rpx;
}
