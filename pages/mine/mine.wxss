.container {
  min-height: 100vh;
  background-color: #f5f5f5;
  padding: 0 0 100rpx 0;
}

.easter-egg-message {
  position: fixed;
  top: 100rpx;
  left: 50%;
  transform: translateX(-50%);
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 40rpx;
  background: rgba(0, 0, 0, 0.8);
  border-radius: 40rpx;
  color: #fff;
  z-index: 9999;
  white-space: nowrap;
  animation: fadeIn 0.3s ease-out;
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

.user-info {
  padding: 40rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.avatar-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 60rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  margin-bottom: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-bottom: 20rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.nickname {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
}

.info-item {
  display: flex;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1rpx solid #f5f5f5;
}

.info-item:last-child {
  border-bottom: none;
}

.info-label {
  width: 200rpx;
  font-size: 28rpx;
  color: #666;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.edit-btn {
  padding: 10rpx 30rpx;
  background: #1890ff;
  color: #fff;
  border-radius: 8rpx;
  font-size: 24rpx;
}

.action-section {
  margin: 0 40rpx;
  margin-bottom: 20rpx;
}

.action-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.08);
}

.action-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
  color: #1890ff;
}

.action-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.author-card {
  margin: 0 40rpx;
  margin-bottom: 20rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.author-header {
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.author-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
}

.author-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  margin-left: 10rpx;
}

.author-contact-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.author-contact-btn:active {
  background: rgba(255, 255, 255, 0.3);
  transform: scale(0.98);
}

.contact-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
  color: #ffffff;
}

.contact-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

.author-tip {
  text-align: center;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
  line-height: 1.6;
}

.thanks-card {
  margin: 0 40rpx;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.thanks-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  margin-bottom: 20rpx;
}

.thanks-content {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
  margin-bottom: 20rpx;
}

.thanks-label {
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-right: 10rpx;
}

.thanks-value {
  font-size: 32rpx;
  font-weight: bold;
  color: #ffffff;
}

.partners-grid {
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
  gap: 20rpx;
}

.partner-column {
  flex: 1;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.3);
  border-radius: 12rpx;
}

.partner-type {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  text-align: center;
  margin-bottom: 12rpx;
}

.type-divider {
  height: 1rpx;
  background: rgba(255, 255, 255, 0.5);
  margin: 12rpx 0;
}

.partner-item {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
  text-align: center;
  padding: 10rpx 0;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.2);
  transition: all 0.2s ease;
}

.partner-item:last-child {
  border-bottom: none;
}

.partner-item:active {
  background: rgba(255, 255, 255, 0.4);
  border-radius: 8rpx;
}

.repeater-item {
  font-size: 30rpx;
  font-weight: 500;
}
